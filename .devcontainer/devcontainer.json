{
  "name": "First EJB Sample",
  "image": "mcr.microsoft.com/devcontainers/java:1-8-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/maven:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "java.home": "/usr/local/sdkman/candidates/java/current"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java"
      ]
    }
  },
  "postCreateCommand": ".devcontainer/post-create.sh"
}

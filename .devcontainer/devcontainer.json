{
  "name": "First EJB Sample",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "features": {
    "ghcr.io/devcontainers/features/java": {
      "version": "8",
      "jdkDistro": "tem"
    },
    "ghcr.io/devcontainers/features/maven": {
      "version": "3.9.6"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "java.home": "/usr/local/sdkman/candidates/java/current"
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java"
      ]
    }
  },
  "postCreateCommand": [
    "mvn",
    "-q",
    "-DskipTests",
    "package"
  ]
}
